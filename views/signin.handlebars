<div class="container body-container row">
    <div class="lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
        <h1>Please Log In</h1>
        <form action="/signin" method="post">
            <div class='row'>
                <div class='col s12'>
                </div>
            </div>
            <div class='row'>
                <div class='input-field col s12'>
                    <input type="text" class="form-control" name="email">
                    <label for='email'>Enter your email</label>
                </div>
            </div>
            <div class='row'>
                <div class='input-field col s12'>
                    <input type="password" class="form-control" name="password">
                    <label for='password'>Enter your password</label>
                </div>
            </div>
            <center>
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s6 btn btn-medium waves-effect '>Login</button>
                    <div class='row'>
                        <button class="loginBtn loginBtn--google" href="/auth/google">
                            Login with Google
                        </button>
                        <label style='float: left;'>
                            <p>Need an account? <a href="/signup">Signup</a></p>
                        </label>
                        <label style='float: right;'>
                            <p><strong>Forgot Password? <a href="/forgot">Forgot</a></strong></p>
                        </label>
                    </div>
                </div>
            </center>
        </form>

        
